@model BowlingPinCalculator.BowlingPinData.BowlingPinViewModel
@{
    ViewBag.Title = "Index";
}
  
        <video autoplay muted loop id="myVideo">
            <source src="~/Content/Untitled.mp4" type="video/mp4">
        </video>
        <div class="jumbotron" >
            <h1>Bowling Ten Pin Calculator</h1>
            <p class="lead">This is a simple Ten Pin Bowling Calculator, For correct results please input a Text File.</p>
            <p>After Strike Please Put 0</p>
        </div>
   
        @using (Html.BeginForm("Index", "BowlingPinCalculator", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {<div class="row d-flex justify-content-center">
                <div class="form-group">
                    <div class="input-group input-file">

                        <input type="file" class="form-control" lang="pl" id="scoreFile" name="scoreFile" accept=".txt" placeholder='Choose a file...' />
                        <input class="btn btn-primary" type="submit" value="Submit">
                    </div>
                </div>
            </div>
        
}
@if(Model.players !=null)
{
    <table class="table table-dark">
        <tr>
            <th>NAME</th>
            <th>TOTAL SCORE</th>
            @for (int i = 0; i <21; i++)
            {
                <th class="score-cells">@(i + 1)</th>
            }
        </tr>
        @foreach (var player in Model.players)
        {
            <tr>
                <td>@player.name</td>
                <td>@player.score</td>
                @for (int i = 0; i < player.points.Length; i++)
                {
                    if (i > 0)
                    {

                        <td class="score-cells">@player.points[i]</td>
                    }
                }
            </tr>
        }
    </table>


}


